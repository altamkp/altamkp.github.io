{
  "metadata": [
    {
      "src": [],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["**/*.{md,yml}"],
        "exclude": ["_site/**"]
      }
    ],
    "globalMetadata": {
      "_appFaviconPath": "images/altamkp.ico",
      "_appFooter": "Copyright (c) 2024 <a href='https://github.com/altamkp'>altamkp</a>",
      "_appLogoPath": "images/altamkp_title.png",
      "_appName": "altamkp",
      "_appTitle": "altamkp",
      "_enableSearch": true,
      "_disableContribution": true,
      "_googleAnalyticsTagId": "G-7RVXCDSYQN",
      "pdf": false
    },
    "output": "_site",
    "resource": [
      {
        "files": ["images/**", "extra.css"]
      }
    ],
    "sitemap": {
        "baseUrl": "https://altamkp.github.io",
        "changefreq": "monthly"
    },
    "template": ["default", "modern"]
  }
}
